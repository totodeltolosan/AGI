name: Test Permissions

on:
  workflow_dispatch:

permissions:
  contents: write
  pull-requests: write
  actions: write

jobs:
  test-push:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
      
      - name: Test Permission
        run: |
          echo "Test permissions" > test-file.txt
          git config --local user.email "action@github.com"
          git config --local user.name "Permission Test Bot"
          git add test-file.txt
          git commit -m "test: permission check" || echo "Nothing to commit"
      
      - name: Push Test
        uses: ad-m/github-push-action@master
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          branch: agi-main
