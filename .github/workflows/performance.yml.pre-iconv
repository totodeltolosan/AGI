name: Performance & Benchmarks

on:
  push:
    branches: [ main, develop ]
  schedule:
    - cron: '0 4 * * *'  # Quotidien Ã  4h

jobs:
  performance-tests:
    name: Performance Analysis
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Setup Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: Install performance tools
      run: |
        pip install pytest-benchmark memory-profiler line-profiler
        pip install psutil py-spy
        
    - name: Run benchmark tests
      run: |
        pytest tests/benchmarks/ --benchmark-json=benchmark-results.json
        
    - name: Memory profiling
      run: |
        python -m memory_profiler core/main.py > memory-profile.txt || echo "Memory profiling completed"
        
    - name: CPU profiling
      run: |
        python -m cProfile -o cpu-profile.prof core/main.py || echo "CPU profiling completed"
        
    - name: Archive performance results
      uses: actions/upload-artifact@v4
      with:
        name: performance-reports
        path: |
          benchmark-results.json
          memory-profile.txt
          cpu-profile.prof
