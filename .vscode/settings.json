{
    // =========================================================================
    // ==  üêç ENVIRONNEMENT & D√âPENDANCES CONSTITUTIONNELS
    // =========================================================================
    // D√©finit l'interpr√©teur Python, assurant l'utilisation de l'environnement virtuel.
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

    // =========================================================================
    // ==  ‚öñÔ∏è GOUVERNANCE CONSTITUTIONNELLE AUTOMATIS√âE (LINTING & FORMATTING)
    // =========================================================================
    // Application de la loi de "Simplicit√© et Maintenabilit√© Extr√™mes" √† chaque sauvegarde.
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=88"
    ],

    // Nettoyage et organisation des imports √† chaque sauvegarde.
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },

    // D√©tection en temps r√©el des violations de style et des erreurs.
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--max-line-length=88",
        "--disable=C0114,C0115,C0116"
    ],

    // Application de la "Gouvernance par les Contrats" via le typage statique.
    "python.linting.mypyEnabled": true,
    "python.analysis.typeCheckingMode": "basic",

    // =========================================================================
    // ==  ‚úçÔ∏è QUALIT√â ET LISIBILIT√â DU CODE
    // =========================================================================
    "editor.rulers": [88, 120],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "better-comments.tags": [
        { "tag": "!", "color": "#FF2D00", "strikethrough": false, "underline": false, "backgroundColor": "transparent", "bold": true, "italic": false },
        { "tag": "?", "color": "#3498DB", "strikethrough": false, "underline": false, "backgroundColor": "transparent", "bold": false, "italic": false },
        { "tag": "//", "color": "#474747", "strikethrough": true, "underline": false, "backgroundColor": "transparent", "bold": false, "italic": false },
        { "tag": "todo", "color": "#FF8C00", "strikethrough": false, "underline": false, "backgroundColor": "transparent", "bold": false, "italic": false },
        { "tag": "*", "color": "#98C379", "strikethrough": false, "underline": false, "backgroundColor": "transparent", "bold": false, "italic": false }
    ],

    // =========================================================================
    // ==  ‚öôÔ∏è PERFORMANCE DE L'ESPACE DE TRAVAIL
    // =========================================================================
    // Exclut les dossiers lourds pour garder VS Code rapide.
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.venv/**": true,
        "**/__pycache__/**": true,
        "**/backup_*/**": true,
        "**/*.sqlite*": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/backup_*": true,
        "**/*.sqlite*": true
    },

    // =========================================================================
    // ==  üêô INT√âGRATION GITHUB SUP√âRIEURE
    // =========================================================================
    "gitlens.currentLine.enabled": true,
    "gitlens.currentLine.format": "  ${author}, ${agoOrDate} ‚Ä¢ ${message}",
    "gitlens.codeLens.enabled": true,
    "terminal.integrated.cwd": "${workspaceFolder}"
}
